                                    <Input id="SALESDOCTYP" value="{path: 'headerData>/SALESDOCTYP', mandatory: 'SALESDOCTYP'}" showSuggestion="true" showValueHelp="true" editable="{HeaderEditModeModel>/SALESDOCTYP}" valueStateText="Required"
                                    change="onInputLiveChange" valueHelpRequest="handleValueHelp" liveChange="onInputLiveChange">
                                    </Input>
                                    <Input id="SALESDOCNO" value="{path: 'headerData>/SALESDOCNO', mandatory: 'SALESDOCNO'}" editable="{HeaderEditModeModel>/SALESDOCNO}" valueStateText="Required">
                                    </Input>
                                </f:fields>
                            </f:FormElement>  
                            <f:FormElement label="{i18n>SALESORG}" visible="{= ${VisibleFieldsData>/SALESORG} === true ? true : false }">
                                <f:fields>
                                    <Input id="SALESORG" value="{path: 'headerData>/SALESORG', mandatory: 'SALESORG'}" showSuggestion="true" showValueHelp="true" editable="{HeaderEditModeModel>/CUSTGRP}" valueStateText="Required"
